import unittest

from lib.globals import STATE_OK, STATE_UNKNOWN, STATE_WARN, STATE_CRIT
import lib.base

        
class TestCheck(unittest.TestCase):

    check = './network-bonding'

    def test_if_check_runs_EXAMPLE_no_bond(self):
        stdout, stderr, retc = lib.base.coe(lib.base.shell_exec(self.check + ' --test=examples/EXAMPLE99,,0'))
        self.assertRegexpMatches(stdout, r'No bonding interfaces found\.')
        self.assertEqual(stderr, '')
        self.assertEqual(retc, STATE_UNKNOWN)

    def test_if_check_runs_EXAMPLE_b0_ok(self):
        stdout, stderr, retc = lib.base.coe(lib.base.shell_exec(self.check + ' --test=examples/EXAMPLE-b0.ok,,0'))
        self.assertRegexpMatches(stdout, r'Everything is ok\.')
        self.assertEqual(stderr, '')
        self.assertEqual(retc, STATE_WARN)

if __name__ == '__main__':
    unittest.main()
