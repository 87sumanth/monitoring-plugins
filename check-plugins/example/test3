import unittest

from lib.globals3 import STATE_OK, STATE_UNKNOWN, STATE_WARN, STATE_CRIT
import lib.base3

        
class TestCheck(unittest.TestCase):

    check = './example2'

    #self.assertEqual(retc, STATE_CRIT)
    #self.assertIn('Waiting for more data (1).', stdout)
    #self.assertRegexpMatches(stdout, r'1 error in Kernel Ring Buffer.')

    def test_if_check_runs_EXAMPLE01(self):
        stdout, stderr, retc = lib.base3.coe(lib.base3.shell_exec(self.check + ' --test=examples/EXAMPLE01,,0'))
        self.assertRegexpMatches(stdout, r'There are critical errors.')
        self.assertEqual(stderr, '')
        self.assertEqual(retc, STATE_CRIT)

    
if __name__ == '__main__':
    unittest.main()