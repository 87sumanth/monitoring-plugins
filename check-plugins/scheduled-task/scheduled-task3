import os

activate_this = False
venv_path = os.path.join(os.path.dirname(os.path.realpath(__file__)), 'monitoring-plugins-venv3')
if os.path.exists(venv_path):
    activate_this = os.path.join(venv_path, 'bin/activate_this.py')

if os.getenv('MONITORING_PLUGINS_VENV3'):
    activate_this = os.path.join(os.getenv('MONITORING_PLUGINS_VENV3') + 'bin/activate_this.py')

if activate_this and os.path.isfile(activate_this):
    exec(open(activate_this).read(), {'__file__': activate_this})


import argparse
import csv
import sys

import lib.base3
from lib.globals3 import STATE_OK, STATE_WARN, STATE_CRIT, STATE_UNKNOWN


__author__ = 'Linuxfabrik GmbH, Zurich/Switzerland'
__version__ = '2021090802'

DESCRIPTION = 'Check the status of a scheduled task.'

DEFAULT_SEVERITY = 'warn'
DEFAULT_STATUS = ['Ready', 'Running']


def parse_args():
    parser = argparse.ArgumentParser(description=DESCRIPTION)

    parser.add_argument(
        '-V', '--version',
        action='version',
        version='{0}: v{1} by {2}'.format('%(prog)s', __version__, __author__),
    )

    parser.add_argument(
        '--task',
        help='Name of the scheduled task.',
        dest='TASK',
        required=True,
    )

    parser.add_argument(
        '--severity',
        help='Severity if something is found. One of "warn" or "crit". Default: %(default)s',
        dest='SEVERITY',
        default=DEFAULT_SEVERITY,
        choices=['warn', 'crit'],
    )

    parser.add_argument(
        '--status',
        help='Expected task status (repeating). Default: %(default)s',
        dest='STATUS',
        default=DEFAULT_STATUS,
        action='append',
        choices=['Disabled', 'Queued', 'Ready', 'Running', 'Unknown'],
    )

    return parser.parse_args()


def main():
    # parse the command line, exit with UNKNOWN if it fails
    try:
        args = parse_args()
    except SystemExit:
        sys.exit(STATE_UNKNOWN)

    problem_state = STATE_CRIT if args.SEVERITY == 'crit' else STATE_WARN

    cmd = 'schtasks /query /fo csv /nh'

    # execute the shell command and return its result and exit code
    stdout, stderr, retc = lib.base3.coe(lib.base3.shell_exec(cmd))
    if stderr or retc != 0:
        lib.base3.oao('{}'.format(stderr), STATE_UNKNOWN)

    reader = csv.reader(stdout.strip().splitlines())
    for row in reader:
        task_name, next_run_time, status = row
        if task_name == args.TASK:
            if status in args.STATUS:
                lib.base3.oao(f'{args.TASK} is {status}', STATE_OK)
            lib.base3.oao(f'{args.TASK} is {status}, but supposed to be {args.STATUS}', problem_state)

    lib.base3.oao(f'Scheduled Task {args.TASK} not found', STATE_UNKNOWN)

if __name__ == '__main__':
    try:
        main()
    except Exception as e:
        lib.base3.cu()
